@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    here is a comment
    on multi-lines
*@
@{
    var myClassValue = Model.Customers.Count > 0 ? "popular" : null;
}
<h2 class="@myClassValue">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <span>No one has rented this movie before.</span>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}
